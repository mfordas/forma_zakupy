  "scripts": {
    "startReact": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --runInBand",
    "test-coverage": "set CI=true && react-scripts test --runInBand --force-exit --coverage",
    "eject": "react-scripts eject",
    "mon": "nodemon --experimental-modules ./src/backend/app.js",
    "start": "node --experimental-modules ./src/backend/app.js",
    "dev": "concurrently -n react,express -k \"npm run startReact\" \"npm run mon\"",
    "format": "prettier --ignore-path .gitignore --write \"./**/*.{js,json,scss,html}\"",
    "heroku-postbuild": "npm install && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "^12.16.0"
  },
  "type": "module",
  "proxy": "http://localhost:8080/",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "json",
      "html"
    ]
  }
